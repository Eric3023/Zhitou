/* components/user/user.wxss */
.user_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.uicon {
  width: 128rpx;
  height: 125rpx;
  border-radius: 50%;
  border: 6rpx solid #ffffff;
  overflow: hidden;
}

.uid {
  font-size: 30rpx;
  color: white;
  margin-top: 18rpx;
  border: none;
}

.uid::after{
  border: none;
}

button[disabled] {
  margin-left: 18rpx !important;
  font-size: 30rpx !important;
  color: #373737 !important;
  border: none !important;
  background: #ffffff !important;
}