.user_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.uicon {
  width: 125rpx;
  height: 125rpx;
  border-radius: 50%;
  /* border: 6rpx solid #ffffff; */
  overflow: hidden;
}

.uicon image{
  width: 125rpx;
  height: 125rpx;
}

.uid {
  font-size: 30rpx !important;
  color: white !important;
  margin-top: 18rpx !important;
  border: none !important;
  background-color: transparent !important;
  line-height: normal;
  padding: 0 !important;
  border:none !important;
}

.uid::after{
  line-height: normal;
  padding: 0 !important;
  border:none !important;
}

