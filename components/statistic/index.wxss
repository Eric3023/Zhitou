/* components/order_message/order_mesage.wxss */
.container {
  height: 276rpx;
  display: flex;
  flex-direction: column;
  background-color: #ebebeb;
}

/*背景图片*/
.background {
  width: 100%;
  height: 180rpx;
}

/*内容容器*/
.body {
  display: flex;
  flex-direction: row;
  width: 698rpx;
  height: 158rpx;
  margin-left: 26rpx;
  margin-right: 26rpx;
  margin-top: 64rpx;
  margin-bottom: 52rpx;
  position: absolute;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0rpx, 0rpx, 8rpx, 4rpx, #ebebeb;
}

.content {
  display: flex;
  flex-direction: column;
  width: 33.333%;
  align-items: center;
  margin-top: 40rpx;
  color: black;
}

.count {
  font-size: 30rpx;
}

.category {
  font-size: 24rpx;
  margin-top: 16rpx;
}