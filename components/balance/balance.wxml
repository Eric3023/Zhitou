<view class="balance_container" catchTap="recharge">
	<view class="balance_content_container">
		<view class="balance_content_header_container">
			<image class="balance_icon" src="{{icon}}"></image>
			<text class="balance_title">{{title}}</text>
		</view>
		<view class="balance_content__body_container">
			<text>余额:</text>
			<text>{{balance}}</text>
			<text>元</text>
		</view>
		<image class="balance_recharge" src="{{recharge}}" bindtap="recharge"></image>
	</view>
</view>