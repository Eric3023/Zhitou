/* components/balance/balance.wxss */
.balance_container {
  position: relative;
  width: 688rpx;
  height: 112rpx;
}

.balance_background {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 0;
}

.balance_content_container {
  position: absolute;
  width: 100%;
  height: 100%;  
  top: 0;
  left: 0;
  z-index: 1;
  display: flex;
  flex-direction: column;
}

.balance_content_header_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.balance_content__body_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 5rpx;
  margin-left: 76rpx;
  font-size: 28rpx;
  color: #dd8c6a;
}

.balance_icon {
  width: 36rpx;
  height: 36rpx;
}

.balance_title {
  font-weight: bold;
  margin-left: 10rpx;
  font-size: 28rpx;
}


.balance_recharge {
  width: 132rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  right: 40rpx;
  margin-top: -20rpx;
}