.balance_container {
  position: relative;
  width: 666rpx;
  height: 82rpx;
}

.balance_content_container {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1;
  display: flex;
  flex-direction: row;
}

.balance_content_header_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 24rpx;
}

.balance_content__body_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #dd8c6a;
}

.balance_icon {
  width: 36rpx;
  height: 36rpx;
}

.balance_title {
  font-weight: bold;
  margin-left: 10rpx;
  font-size: 28rpx;
}


.balance_recharge {
  width: 128rpx;
  height: 44rpx;
  position: absolute;
  right: 40rpx;
  top: 50%;
