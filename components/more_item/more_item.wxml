<!--components/more_item.wxml-->
<view class="container">
	<view class="item_title_container">
		<view class="icon">
			<image class="icon_0" wx:if="{{!icon}}" src="{{defaultIcon}}"></image>
			<image class="icon_1" wx:if="{{icon}}" src="{{icon}}"></image>
		</view>
		<text class="title" style="color:{{color}}">{{title}}</text>
		<image class="close" wx:if='{{close}}' src="/img/icon_more_close.png" bindtap="onClose"></image>
	</view>
	<view class="item_content_container">
		<view class="item" wx:for="{{items}}" wx:key="index" data-name="{{item.name}}" bindtap="onClick" wx:if="{{index<max_num||more}}">
			<view class="content">{{item.name}}</view>
		</view>
	</view>
	<view class=" item_pull_contianer">
		<image class="icon_pull" wx:if="{{items.length>max_num &&!more}}" src="/img/icon_pull_more.png" bindtap="seeMore"></image>
	</view>
</view>