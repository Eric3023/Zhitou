.container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 28rpx;
  margin-right: 28rpx;
  margin-top: 14rpx;
  margin-bottom: 14rpx;
}

.img {
  width: 160rpx;
  height: 130rpx;
}

.content {
  width: 400rpx;
  display: flex;
  flex-direction: column;
  margin-left: 18rpx;
}

.title {
  font-size: 24rpx;
  color: black;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.address {
  font-size: 22rpx;
  color: #484848;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.time {
  width: fit-content;
  font-size: 22rpx;
  background-color: #f6f2e9;
  color: #d7ac96;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  max-width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.state{
  font-size: 24rpx;
  color: #d7ac96;
  position: absolute;
  right: 60rpx;
}