<wxs src="index.wxs" module="util" />
<view class="container">
	<!-- 图片 -->
	<image class="img" src="{{img}}" mode="aspectFill" />
	<!-- 详情 -->
	<view class="content">
		<text class="title">{{title}}</text>
		<text class="address">地址：{{address}}</text>
		<view class="address" hidden="true">
			<text>已曝光{{count}}次</text>
		</view>
		<text class="time">{{util.getTime(start)}}-{{util.getTime(end)}}</text>
	</view>
	<!-- 投放状态 -->
	<text class="state">{{state}}</text>
</view>