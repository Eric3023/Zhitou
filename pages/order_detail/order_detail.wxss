page {
  background-color: white;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.invoice {
  background-color: #f2f2f2;
  width: 100%;
  height: 72rpx;
  box-shadow: 0 0 8rpx #dedede;
  position: relative;
  font-size: 28rpx;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.invoice text {
  position: absolute;
  right: 38rpx;
  font-weight: 500;
}

.icon {
  margin-top: 40rpx;
  width:136rpx;
  height: 136rpx;
}

.title {
  margin-top: 32rpx;
  color: #000000;
  font-size: 32rpx;
}

.price {
  margin-top: 40rpx;
  color: #000000;
  font-size: 48rpx;
}

.line {
  margin-top: 90rpx;
  margin-bottom: 20rpx;
  width: 650rpx;
  height: 2rpx;
  background-color: #f2f2f2;
}

.content {
  width: 650rpx;
  margin-top: 28rpx;
  color: #ababab;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  flex-wrap: nowrap;
}

.param {
  color: #000000;
  margin-left: 48rpx;
  width: 490rpx;
  white-space: normal;
}