<view class="searchline">
  <view class="select-city" bindtap="onSelectCity" >
    <text class="city">{{currentcity}}</text>
  </view>
  <image src="../../img/select.png" class="selectimage"></image>
  <view class="line-left"></view>

  <input type="text" class="search-input" confirm-type="search" value="{{keyword}}" bindconfirm="onKeywordConfirm" placeholder="{{defaultKeyword.keyword}}" 
  placeholder-style="color:#cccccc;"
  bindfocus="hiddenMap"
  bindblur="showMap"
  bindinput=""
  ></input>

<!-- 
<image class="del" wx-if="{{keyword}}" bindtap="clearKeyword" src="../../img/clear_input.png"></image> -->

<button size="mini" plain="true" form-type="submit" class="search-button" bindtap="clearKeyword">取消</button>
<view class="line"></view>
  </view>

<view class="map-container {{hiddenMap==true?'map-hidden':'map-block'}}">
  <view class="map-content">
    <map id="map"
        class="map"
        latitude="{{latitude}}" longitude="{{longitude}}" 
        show-location="true"
        bindregionchange="onChangeRegion"
        scale='14'
        markers="{{markers}}"
      >
    <image
					class="locationpicker-ic-marker {{animation ? 'locationpicker-animation' : ''}}"
					src="../../img/Big_Marker@2x.png"
					bindanimationend="onMarkerAnimationend"
				/>
    
    </map>
        
         <view class="location" >
      
            <text>位置：</text>
            <text >{{addressInfo.recommend}}</text>
            <!-- <view wx-if="{{addressInfo.businessArea != ''}}">
              所属商圈：{{addressInfo.businessArea}}
            </view> -->
            <view class="user-font">10公里内有<text class="usercount-color" v-model="userCount">1880+</text>个用户</view>
          </view>

        <view class="pois-container" wx:if="{{pois.length > 0}}">
          <view class="pois-title">
            周边地点
          </view>
          <scroll-view class="poi-list">
            <view class="list-item" wx:for="{{pois}}" wx:key="{{index}}" data-index="{{index}}" data-poi="{{item}}">
              <view class="item-title">
                <text>{{item.title}}</text>
              </view>
              <view class="item-info">
                <text class="item-address">{{item.address}}</text>
              </view>
            </view>
          </scroll-view>
        </view>
  </view>

</view>


<!-- 返回的地址 -->
    <view class="list {{hiddenMap==false?'map-hidden':'map-block'}}" wx:if="{{siteData.length>0}}">
      <view class='list-li' wx:for="{{siteData}}" wx:key="{{index}}" data-location='{{item.location}}' data-index='{{index+1}}' bindtap='bindDistance'>
        
        <view class='list-img'>
          <image src='../../img/dot.png' mode='widthFix'/>
        </view>

        <view class='list-r'>
          <view class='list-p'>{{item.title}}</view>
          <view class='list-span text-truncate2'>{{item.address}}</view>
        </view>
        
      </view>
    </view>
