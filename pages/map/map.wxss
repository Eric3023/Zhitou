page{ width: 100%; height:100%; }

.map-container {
	display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #F8F8F7;
  width: 100%;
  height: 100%;
  margin-top: 80rpx;
}
.map-content {
  width: 100%;
  /* background: #FFF; */
}
.map {
  width:100%;
  height:300px;
  position:relative;
  
}
.feature-switch {
  line-height: 51px;
}
.locationpicker-ic-marker {
	position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -44px;
  margin-left: -15px;
  width: 30px;
  height: 44px;
  z-index: 9999;
}
.locationpicker-animation {
  animation: markermove 0.5s ease;
}
@keyframes markermove
{
  from {transform: translateY(0)}
  50% {transform: translateY(-50px)}
  to {transform: translateY(0)}
}

.location {
    margin: 16rpx 18rpx;
    background: white;
    border: 0rpx #cccccc solid;
    box-shadow: 0rpx 0rpx 10rpx #e0e0e0 ;
    font-size: 22rpx;
    padding-left: 15rpx;
    font-family: PingFangSC-Regular, sans-serif;
    line-height: 4em;
    color: #070707;
}

.location > text {
    font-size: 22rpx;
    font-family: PingFangSC-Regular, sans-serif;
    color: #070707;
    white-space: nowrap;/* 不换行，省略号*/

    
}
.location > image {
    vertical-align: middle;
    width: 18rpx;
    height: 18rpx;
    padding-right: 5rpx;
}

.location .user-font {
    /* height: 100%; */
    position: relative;
    float: right;
    padding-right: 2px;
    font-family: PingFangSC-Regular, sans-serif;
    font-size: 18rpx;
    color: rgba(78, 75, 75,0.7);
}

.location .user-font .usercount-color {
  color:rgb(236, 98, 98);
}

.pois-container {
  margin-top: 10px;
  background: #fff;
}
.poi-list .list-item {
  /* height: 84px; */
  margin: 0 20px;
  padding: 18px 0;
  border-bottom: 1px solid rgba(0,0,0,0.10);
}
.poi-list .item-title {
  line-height: 24px;
  width: 80%;
  font-size: 16px;
  color: #222222;
  letter-spacing: 0;
  overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.poi-list .item-info {
  width: 80%;
  line-height: 20px;
  overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #444444;
  letter-spacing: 0;
}
.poi-list .item-distance {
  margin-right: 10px;
}
.pois-title {
  font-size: 16px;
  padding-top: 20px;
  margin: 10px 20px 0;
}
.hidden {
  overflow: hidden
}
.map-hidden{
  display: none;
}
.map-block{
  display: block;
}
