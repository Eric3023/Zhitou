/* pages/mine/mine.wxss */
page {
  background-color: #ebebeb;
}

.container {
  display: flex;
  flex-direction: column;
}

.header_container {
  height: 372rpx;
  margin-top: 2rpx;
  box-shadow: 0rpx 0rpx 10rpx 4rpx #ebebeb;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header_container .background {
  width: 100%;
  height: 310rpx;
  background-color: #ee7f51;
  position: absolute;
  top: 0;
  z-index: 0;
}

.user_info {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-top: 56rpx;
}

.authentication {
  padding: 0rpx 20rpx 0rpx 20rpx ;
  position: relative;
  left: 72rpx;
  bottom: 94rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
}

.header_user_balance {
  width: 666rpx;
  border-radius: 15rpx;
  box-shadow: 0 0 8 rpx #bcbcbc;
  background-color: white;
  position: absolute;
  top: 275rpx;
  left: 42rpx;
  z-index: 9;
}

.body_container {
  background-color: white;
  margin-top: 12rpx;
  box-shadow: 0rpx 0rpx 10rpx 4rpx #ebebeb;
}

.tail_container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 80rpx;
  font-size: 24rpx;
  color: #7c7c7c;
}

.header_balance_container {
  margin-left: 34rpx;
  margin-right: 34rpx;
  margin-top: 44rpx;
  margin-bottom: 40rpx;
  height: 110rpx;
}

.nickname::after {
  border: none;
  font-size: 25rpx;
}

