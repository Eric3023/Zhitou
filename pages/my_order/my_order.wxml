<!--pages/my_order/my_order.wxml-->
<view class="order_container">
	<!-- 订单简介 -->
	<v_order_message class="order_message" throwing="{{order_message.throwing}}" exposed="{{order_message.exposed}}" audience="{{order_message.audience}}" />
	<!-- 订单分类 -->
	<v_order_category class="order_category" bindchangetype="onChangeType" />
	<!-- 订单列表 -->
	<v_order_item class="order_list_item" wx:for="{{orders}}" img="{{item.img}}" title="{{item.title}}" address="{{item.address}}" count="{{item.count}}" start="{{item.start}}" end="{{item.end}}" state="{{state}}" />
</view>