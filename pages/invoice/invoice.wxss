page {
  background-color: white;
}

.sub_contaner {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #929292;
  margin: 26rpx 50rpx 26rpx 50rpx;
}

.param {
  font-size: 32rpx;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 32rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.data {
  left: 180rpx;
  position: absolute;
  font-size: 28rpx;
}

.radio_container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.radio_margin {
  margin-left: 80rpx;
}

.btn {
  height: 102rpx;
  width: 100%;
  background-color: #f88a3e;
  color: white;
  font-size: 32rpx;
  position: fixed;
  border-radius: 0;
  bottom: 0;
  z-index: 9;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

input{
  background-color: #efefef;
  border-radius: 5rpx;
  width: 420rpx;
  left: 180rpx;
  top: 0rpx;
  height: 100%;
  position: absolute;
  font-size: 28rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}