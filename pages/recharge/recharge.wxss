page {
  background-color: white;
}

.container {
  background-color: #f2f2f2;
}

.title {
  margin: 36rpx 28rpx 36rpx 28rpx;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}

.title .child {
  display: flex;
  flex-direction: row;
  position: relative;
  align-items: center;
}

.title .child_margin {
  margin-top: 32rpx;
}

.title .child .data {
  position: absolute;
  right: 20rpx;
}

.title .child .origin {
  color: #fd6c30;
  border: 1rpx solid #fd6c30;
  border-radius: 2rpx;
  padding:10rpx 20rpx 10rpx  20rpx ;
  position: absolute;
  right: 0;
}

.body {
  background-color: white;
  padding: 54rpx 52rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.body .type {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}

.body .type .option {
  color: #000000;
  font-size: 28rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.body .type .option_margin {
  margin-top: 60rpx;
}

.body .type .option image {
  width: 68rpx;
  height: 50rpx;
  margin-right: 12rpx;
}

.body .type .option radio {
  position: absolute;
  right: 0;
}

.btn {
  width: 100%;
  height: 72rpx;
  background-color: #fc832d;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}