page {
  margin: 0;
  padding: 0;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
}

.balance-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* align-items: center; */
  margin: 50rpx 30rpx;
  height: 150rpx;
  font-size: 26rpx;
}

.balance {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.recharge {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.recharge input {
  border: 1rpx solid #fa833a;
  width: 180rpx;
  height: 2rem;
  text-align: center;
}

form {
  width: 100%;
  height: 100%;
}

.form_container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.payment-method {
  width: 100%;
  flex: 1;
  margin: 0rpx 0 0 0;
  background: #fff;
  box-shadow: 1rpx 1rpx 10rpx #cccccc;
  border: 0;
  border-radius: 20rpx 20rpx 0 0;

}

.radio-group {
  margin: 35rpx 15rpx;

}

.payment {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  margin: 20rpx 30rpx;
}

.payment text {
  margin: 0 auto 0 10rpx;
  font-size: 26rpx;
  height: 25px;
  line-height: 25px;
}

.radio-group {
  display: flex;
  flex-direction: column;
}

.radio-group image {
  width: 68rpx;
  height: 50rpx;
}

.radio {

  transform: scale(0.9);

}

.button-payment {
  font-size: 30rpx;
  border-radius: 0rpx;
  background: #fa833a;
  color: #ffffff;
}

.button-payment::after {
  border: 0;
}

.account-info {
  display: flex;
  flex-direction: column;
  margin: 10rpx auto 0 auto;
  width: 90%;
  background: #f7f7f7;
  color: #8c8c8c;
  font-size: 26rpx;
}

.account-text {
  margin: 10rpx 10rpx;
}

.hidden {
  display: none;
}

.show-flex {
  display: flex;
}

.show-block {
  display: block;
}