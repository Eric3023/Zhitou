page {
  background-color: #ebebeb;
}

.header {
  height: 208rpx;
  margin-top: 10rpx;
  padding-left: 60rpx;
  padding-bottom: 60rpx;
  background: white;
  border-radius: 25rpx;
  box-shadow: 0rpx 0rpx 8rpx #dedede;
}

.ad {
  margin: 0rpx 50rpx 26rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.code_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 26rpx;
  width: 650rpx;
  height: 142rpx;
  background-color: white;
  position: relative;
}

.code_backgroud {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 0;
}

.code_messeage {
  width: 58%;
  position: relative;
  z-index: 9;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.code_title {
  width: 80%;
  font-size: 28rpx;
  margin-left: 38rpx;
  color: #000000;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.code_content {
  width: 90%;
  font-size: 24rpx;
  margin-top: 22rpx;
  margin-left: 38rpx;
  color: #484848;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.code_btn_container {
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 54rpx;
  z-index: 9;
}

.btn {
  background-color: white;
  font-size: 20rpx;
  border-radius: 20rpx;
  padding: 5rpx 12rpx 5rpx 12rpx;
}

.preview {
  margin-left: 20rpx;
}

.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 9;
}

.model {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 650rpx;
  height: 1020rpx;
  margin-left: -325rpx;
  margin-top: -510rpx;
  background-color: white;
  z-index: 99;
}

.model_header {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.model_selector {
  margin-top: 24rpx;
  margin-left: 32rpx;
}

.model_title {
  font-size: 26rpx;
  font-weight: 400;
}

.model_body {
  margin-left: 75rpx;
}

.model_items {
  margin-top: 18rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.model_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 26rpx;
}

.model_radio {
  position: relative;
  margin-top: -16rpx;
}

.model_img {
  width: 142rpx;
  height: 220rpx;
  margin-bottom: 16rpx;
}

.photo {
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  margin-top: 20rpx;
  align-items: center;
}

.photo_update {
  width: 68rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #bebebe;
  margin-left: 50rpx;
}

.input_title {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.input_container {
  font-size: 24rpx;
  margin-top: 24rpx;
}

.notice {
  margin-left: 20rpx;
  font-size: 18rpx;
  color: #cbcbcb;
}

.notice_icon {
  margin-left: 8rpx;
  position: relative;
  bottom: 1rpx;
  width: 20rpx;
  height: 20rpx;
}

.place_class {
  font-size: 20rpx;
  margin-left: 12rpx;
}

.motto {
  margin-top: 28rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.picker {
  margin-left: 200rpx;
  font-size: 20rpx;
  border: 1rpx solid #cecece;
  padding: 4rpx 16rpx 4rpx 16rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.picker_icon {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.input {
  width: 450rpx;
  height: 36rpx;
  margin-top: 12rpx;
  background-color: #f1f1f1;
  box-shadow: 0rpx 0rpx 5rpx #dedede;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.cycle {
  font-size: 26rpx;
  margin-top: 36rpx;
}

.btn_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-top: 36rpx;
}

.button {
  padding: 0 72rpx 0 72rpx;
  font-size: 26rpx;
}

.city {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: black;
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 38rpx;
}

.point1 {
  width: 40rpx;
  height: 40rpx;
  margin-left: 220rpx;
}

.change {
  color: #4cbea0;
  margin-left: 12rpx;
}

.point2 {
  width: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
}

.address {
  color: #5a5a5a;
}

.audience {
  font-size: 20rpx;
  color: #5a5a5a;
  margin-top: 28rpx;
}

/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}