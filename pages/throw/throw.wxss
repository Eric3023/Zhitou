page {
  background-color: #ebebeb;
}

.header {
  height: 208rpx;
  margin-top: 10rpx;
  padding-left: 60rpx;
  padding-bottom: 60rpx;
  background: white;
  border-radius: 25rpx;
  box-shadow: 0rpx 0rpx 8rpx #dedede;
}

.ad {
  margin: 0rpx 50rpx 26rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.code_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 26rpx;
  width: 650rpx;
  height: 142rpx;
  background-color: white;
  position: relative;
}

.code_backgroud {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 0;
}

.code_messeage {
  width: 58%;
  position: relative;
  z-index: 9;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.code_title {
  width: 80%;
  font-size: 28rpx;
  margin-left: 38rpx;
  color: #000000;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.code_content {
  width: 90%;
  font-size: 24rpx;
  margin-top: 22rpx;
  margin-left: 38rpx;
  color: #484848;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.code_btn_container {
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 54rpx;
  z-index: 9;
}

.btn {
  background-color: white;
  font-size: 20rpx;
  border-radius: 20rpx;
  padding: 5rpx 12rpx 5rpx 12rpx;
}

.preview {
  margin-left: 20rpx;
}

.city {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: black;
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 38rpx;
}

.point1 {
  width: 40rpx;
  height: 40rpx;
  margin-left: 220rpx;
}

.change {
  color: #4cbea0;
  margin-left: 12rpx;
}

.point2 {
  width: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
}

.address {
  color: #5a5a5a;
}

.audience {
  font-size: 20rpx;
  color: #5a5a5a;
  margin-top: 28rpx;
}