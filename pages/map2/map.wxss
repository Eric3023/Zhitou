.searchline {
   position: fixed;
   top: 30rpx;
    left: 15rpx;
    right: 15rpx;
    /* border-radius: 10rpx; */
    height: 80rpx;
    background: white;
    
    z-index:999;
    box-shadow: 0rpx 0rpx 10rpx #e0e0e0 ;
}
.search-input{
  display: inline-block;
  width: 70%;
  height: 60rpx;
  margin: 10rpx 0rpx 10rpx 10rpx;
  
  background: url(data:image/png;base64,) no-repeat left  #ffffff;
  background-size: 35rpx 35rpx;
  background-position-x: 10rpx;
  padding-left: 60rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #5a5656;
}

.searchline .line {
  float: right;
  width: 1rpx;
  height: 60rpx;
  margin: 10rpx auto;
  border-right: 1rpx solid #cccccccc;
}
.searchline .search-button {
  float: right;
  width: 80rpx;
  height: 60rpx;
  padding: 3rpx;
  margin: 10rpx 15rpx 10rpx 15rpx;
  text-align: center;
  vertical-align: middle;
  font-size: 26rpx;
  color: #ec8656;
  background: white;
  border: none;
}

.searchline .del {
  position: absolute;
  top: 15rpx;
  right: 30rpx;
  width: 53rpx;
  height: 53rpx;
  z-index: 10;
}

