.container {
    width: 100%;
    height: 100%;
    position: relative;
    /* overflow-x:hidden;* 消除左右滑动 * */
}

.searchline {
    background: #ffffff;
    height: 80rpx;
    width: 100%;
    margin: 0;
    /* box-shadow: 0px 3px 5px #ecebeb; */
    position: fixed;
    top: 0rpx;
    left: 0;
    z-index: 9;
}

.search {
    float: left;
    margin: 5px auto 20px 12px;
    width: 85%;
    height: 50rpx;
    /* 浮动起来后，脱离了行级，高才生效*/
    border: 1px solid #e6e3e349;
    border-radius: 25rpx;
    background-size: 100% 100%;
    background-color: #f7fbfe;
    align-items: center;
    /* line-height: 58rpx; */
    display: flex;
}

.search>image {

    /* float: left;
    margin-top: 8rpx; */
    margin-left: 10rpx;
    width: 35rpx;
    height: 35rpx;
}

.search>text {
    float: left;
    margin-top: 0rpx;
    margin-left: 12rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Regular, sans-serif;
    color: rgb(226, 224, 224);
}

.carousel {

    width: 100%;
    background-color: rebeccapurple;
    margin: 80rpx 0 0rpx 0;
}

.carousel_swiper {
    width: 100%;
    height: 340rpx;
    display: block;
    position: relative;
    background: #f4f4f4;
}

.carouselImg {
    width: 100%;
    height: inherit;
}

.image1 {
    padding-top: 12rpx;
    width: 35rpx;
    height: 35rpx;
    float: right;
    margin: 5px 16px 10px auto;
}

.location {
    margin: 16rpx 18rpx;
    background: white;
    border: 0rpx #cccccc solid;
    box-shadow: 0rpx 0rpx 10rpx #e0e0e0;
    font-size: 22rpx;
    padding-left: 15rpx;
    font-family: PingFangSC-Regular, sans-serif;
    line-height: 4em;
    color: #070707;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
}

.location>text {
    font-size: 22rpx;
    font-family: PingFangSC-Regular, sans-serif;
    color: #070707;

}

.location>image {
    vertical-align: middle;
    width: 18rpx;
    height: 18rpx;
    padding-right: 5rpx;
}

.location .user-font {
    /* height: 100%; */

    float: right;
    padding-right: 5px;
    font-family: PingFangSC-Regular, sans-serif;
    font-size: 18rpx;
    color: rgba(78, 75, 75, 0.7);
    position: absolute;
    right: 10rpx;

}

.location .user-font .usercount-color {
    color: rgb(236, 98, 98);
}

.case-list {
    background-color: white;
    width: 100%;
    /* height: 100%; */
    border-radius: 5rpx;
    box-sizing: border-box;
    padding: 20rpx 15rpx 0 15rpx;
}

.case-list .header {
    font-style: #000000;
    font-size: 28rpx;
    margin: 0 auto 13rpx 20rpx;
    font-weight: bold;
}

.list-top {
    float: left;
    width: 100%;
    height: auto;
    border: 0px solid;
    border-radius: 10px;
    /* margin: 0 10px 10px 0; */
    margin: 0 1% 2% 0;

    align-items: center;
    /** 垂直居中*/
    justify-content: center;
    /** flex 属性， 水平居中**/
}

.case-list .list-left {

    float: left;
    width: 49%;
    height: auto;
    border: 0px solid;
    border-radius: 10px;
    /* margin: 0 10px 10px 0; */
    margin: 0 1% 1% 0;

    align-items: center;
    /** 垂直居中*/
    justify-content: center;
    /** flex 属性， 水平居中**/
}

.case-list .list-right {
    float: right;
    width: 49%;
    height: auto;
    border: 0px solid;
    border-radius: 10px;
    /* margin: 0 10px 10px 0; */
    margin: 0 0 1% 0;
}

.case-list image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
    border-radius: 10px;
    min-width: 0;
}

.mask {
    position: fixed;
    z-index: 99;
}

.bully {
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
}

.location .title{
    width: 60%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}